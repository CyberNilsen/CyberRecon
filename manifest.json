{
  "manifest_version": 3,
  "name": "CyberRecon",
  "version": "1",
  "description": "Advanced WHOIS, IP lookup & DNS reconnaissance tool for security research",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://ipapi.co/*",
    "https://dns.google/*",
    "http://ip-api.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CyberRecon"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}